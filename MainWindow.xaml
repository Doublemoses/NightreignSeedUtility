<Window x:Class="NightreignSeedUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NightreignSeedUtility"
        mc:Ignorable="d"
        Title="Nightreign Seed Utility" Height="360" Width="800" ResizeMode="NoResize">
    <Grid>
        <Button Content="Get Store" HorizontalAlignment="Left" Margin="169,9,0,0" VerticalAlignment="Top" Width="60" Click="Button_GetStore"/>
        <TextBox x:Name="textboxSeed" HorizontalAlignment="Left" Margin="44,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="TextBox_VerifySeed" MaxLength="8" MaxLines="1"/>
        <TextBlock x:Name="textShopId" HorizontalAlignment="Left" Margin="234,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135"/>
        <ListView x:Name="listviewStoreItems" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,34,10,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Item" Width="180" DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn Header="Passive" Width="250" DisplayMemberBinding="{Binding Path=Passive}"/>
                    <GridViewColumn Header="Weapon Skill/Spell" Width="250" DisplayMemberBinding="{Binding Path=DisplaySkill}"/>
                    <GridViewColumn Header="Price" Width="50" DisplayMemberBinding="{Binding Path=Price}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-au" Text="Seed:"/></TextBlock>

    </Grid>
</Window>
